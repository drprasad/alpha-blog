<h2 align="center">Signup for Alpha Blog</h2>

<%= render "shared/errors", obj: @user %>

<div class="row">
	<div class="col-md-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<%= f.label :username, class: "control-label col-sm-2" %>
				<div class="col-lg-4 col-md-4 col-sm-5">
					<%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :email, class: "control-label col-sm-2" %>
				<div class="col-lg-4 col-md-4 col-sm-5">
					<%= f.email_field :email, class: "form-control", placeholder: "Enter Email" %>
				</div>
			</div>
			<div class="form-group">
				<%= f.label :password, class: "control-label col-sm-2" %>
				<div class="col-lg-4 col-md-4 col-sm-5">
					<%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
				</div>
			</div>


		<% end %>
		<div class="col-xs-2 col-xs-offset-2">
			[ <%= link_to "Cancel", articles_path %> ]
		</div>
	</div>
</div>