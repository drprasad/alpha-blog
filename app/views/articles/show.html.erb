<h2 align="center"> Title: <%= @article.title %></h2>
<div class="row">
	<div class="well col-xs-8 col-xs-offset-2">
		<h4 class="center description"><b>Description</b></h4>
		<%= simple_format(@article.description) %>
	</div>
</div>
<div class="article-actions col-xs-8 col-xs-offset-2 center">
	<%= link_to "Edit Article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
	<%= link_to "Delete Article", article_path(@article), 
																method: :delete,
																data: {confirm: "Are you sure you want to delete this article?"},
																class: "btn btn-xs btn-danger" %>
	<%= link_to "View all Articles", articles_path, class: "btn btn-xs btn-success" %>
</div>
